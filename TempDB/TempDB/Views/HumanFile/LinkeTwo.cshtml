@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <link rel="stylesheet" href="../../css/table.css"
          type="text/css">

    <script src="~/Scripts/vue/dist/vue.js"></script>
    <script src="~/Scripts/element-ui/lib/index.js"></script>
    <link href="~/Scripts/element-ui/lib/theme-chalk/index.css" rel="stylesheet" />
    <script src="~/Scripts/axios/dist/axios.js"></script>
</head>
<body onload="">
    <div id="app">
        <form action="" method="post">
            <font color="black"> 您在做的业务是-人力资源-调动管理-调动登记列表 </font>
            <br /><br /><br />

            <table width="100%" border="1" cellpadding=0 cellspacing=1
                   bordercolorlight=#848284 bordercolordark=#eeeeee
                   class="TABLE_STYLE1">
            </table>

            <el-table :data="tableData"
                      border
                      style="width: 100%"
                      :header-cell-style="{ fontSize: '20px', height:'64px'}">
                <el-table-column prop="first_kind_name"
                                 label="I级机构名称"
                                 width="300">
                </el-table-column>
                <el-table-column prop="second_kind_name"
                                 label="II级机构名称"
                                 width="300">
                </el-table-column>
                <el-table-column prop="third_kind_name"
                                 label="III级机构名称"
                                 width="300">
                </el-table-column>
                <el-table-column prop="salary_standard_name"
                                 label="薪酬标准"
                                 width="300">
                </el-table-column>
                <el-table-column prop="human_name"
                                 label="名字"
                                 width="280">
                </el-table-column>
                <el-table-column label="调动">
                    <template slot-scope="scope">
                        <el-button size="mini"  type="primary" style="width:70px;height:40px"
                                   v-on:click="handleEdit( scope.row)">调动</el-button>
                    </template>
                </el-table-column>
            </el-table>
            <div id="fye" style=" width: 450px; padding-left: 620px; padding-top: 10px;">
                <el-pagination v-on:size-change="handleSizeChange"
                               v-on:current-change="handleCurrentChange"
                               :currentpage="currentPage"
                               :page-sizes="[4, 8, 12, 16]"
                               :page-size="pageSize"
                               layout="total, sizes, prev, pager, next, jumper"
                               :total="rows">
                </el-pagination>
            </div>
        </form>
    </div>
    <script type="text/javascript">
        var vm = new Vue({
            el: "#app",
            data() {
                return {
                    tableData: [],
                    currentPage: 1,
                    pageSize: 4,
                    rows: 1,
                }
            },
            methods: {
                fill() {
                    var splicing =@Html.Raw(Json.Encode(ViewBag.s));
                    axios.get("/HumanFile/MoObscure", {
                        params: {
                            PageSize: this.pageSize,
                            CurrentPage: this.currentPage,
                            Condition: splicing
                        }
                    }).then(res => {
                            this.tableData = res.data.List;
                            this.rows = res.data.Rows;
                        })
                        .catch(err => {
                            console.log(err);
                        })
                }, handleSizeChange: function (size) {
                    this.pageSize = size;
                    this.currentPage = 1;
                    this.fill();
                },
                handleCurrentChange: function (cpage) {
                    this.currentPage = cpage;
                    this.fill();
                },
                handleEdit(row) {
                    console.log(row);
                    location.href = "/HumanFile/XQ?id=" + row.huf_id;
                }
            },
            mounted: function () {
                this.fill();
            }

        })
    </script>
</body>
</html>