
@{
    Layout = null;
}

<!DOCTYPE html>
@using Model
@model IEnumerable<Config_public_char>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="~/Scripts/vue/dist/vue.js"></script>
    <script src="~/Scripts/element-ui/lib/index.js"></script>
    <link href="~/Scripts/element-ui/lib/theme-chalk/index.css" rel="stylesheet" />
    <script src="~/Scripts/axios/dist/axios.js"></script>
    <link rel="stylesheet" href="../../css/table.css" type="text/css">
    <script type="text/javascript" src="../../javascript/comm/comm.js"></script>
</head>
<body>
    <table width="100%">
        <tr>
            <td>
                <font color="black">
                    您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--公共属性设置
                </font>
            </td>
        </tr>
        <tr>
            <td align="right">
                <input type="button" value="添加" style=" width: 100px; border-radius: 10px; height: 29px;" class="BUTTON_STYLE1"
                       onclick="window.location.href='/Cpchar/Insert';">
            </td>
        </tr>
    </table>
    <div id="app">
        <el-table :data="data"
                  border
                  style="width: 100%">
            <el-table-column width="100">
            </el-table-column>
            <el-table-column prop="attribute_kind"
                             label="属性种类"
                             width="620">
            </el-table-column>
            <el-table-column prop="attribute_name"
                             label="属性名称"
                             width="620">
            </el-table-column>
            <el-table-column label="操作">
                <template slot-scope="scope">
                    <el-button size="mini" type="danger" style="width:70px;height:40px" v-on:click="delete2(scope.row.pbc_id)">删除</el-button>
                </template>
            </el-table-column>
        </el-table>
        <div id="fye">
            <el-pagination v-on:size-change="handleSizeChange"
                           v-on:current-change="handleCurrentChange"
                           :currentpage="currentPage"
                           :page-sizes="[5, 10, 15, 20]"
                           :page-size="pageSize"
                           layout="total, sizes, prev, pager, next, jumper"
                           :total="rows">
            </el-pagination>
        </div>
    </div>
    <style>
        #fye {
            width: 800px;
            margin-top: 20px;
            margin-left: 370px;
        }
    </style> 
    <script type="text/javascript">
        var vm = new Vue({
            el: "#app",
            data: {
                data: [],//进行存储数据
                currentPage: 1,
                pageSize: 5,
                rows: 1,
            },
            methods: {
                fill: function () {
                    var t = this;
                    axios.get('/Cpchar/Index2',{
                        params: {
                            CurrentPage: t.currentPage,
                            PageSize: t.pageSize
                        }
                    }).then(res => {
                        t.data = res.data.List;
                        t.rows = res.data.Rows;
                        console.log(res)
                    }).catch(err => {
                        console.log(err);
                    })
                }, handleSizeChange: function (size) {
                    this.pageSize = size;
                    this.currentPage = 1;
                    this.fill();
                },
                handleCurrentChange: function (cpage) {
                    this.currentPage = cpage;
                    this.fill();
                },
                  delete2(id) {
                    console.log(id);
                    var t = this;
                    if (confirm("是否确认删除")) {
                        axios.get('/Cpchar/CharDelete1', {
                            params: {
                                id: id
                            }
                        }).then(res => {
                            console.log(res.data);
                            if (res.data =1) {
                                this.$message({
                                    message: "删除成功",
                                    type: "success"
                                });
                                t.fill();
                            } else {
                                alert("删除失败");
                            }
                        })
                    }
                }
            },
            mounted: function () {
                this.fill();
            }
        })
    </script>
</body>
</html>
