@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <link rel="stylesheet" href="../../css/table.css"
          type="text/css">

    <script src="~/Scripts/vue/dist/vue.js"></script>
    <script src="~/Scripts/element-ui/lib/index.js"></script>
    <link href="~/Scripts/element-ui/lib/theme-chalk/index.css" rel="stylesheet" />
    <script src="~/Scripts/axios/dist/axios.js"></script>

    <style type="text/css">
        .el-input__inner {
            background-color: white;
            height: 30px;
            line-height: 30px;
        }
    </style>
</head>
<body>
    <div id="app">
        <form action="" method="post">
            <input type="hidden" name="page.startPage" value="0">
            <table width="100%">
                <tr>
                    <td>
                        <font color="black">您正在做的业务是：人力资源--薪酬发放管理--薪酬发放登记</font>
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        <input type="button" style="width: 65px; height: 30px; border-radius: 5px" value="确 定" v-on:click="ti()" class="BUTTON_STYLE1">
                    </td>
                </tr>
            </table>
            <table width="100%" border="1" cellpadding=0 cellspacing=1
                   bordercolorlight=#848284 bordercolordark=#eeeeee
                   class="TABLE_STYLE1">
                <tr>
                    <td width="27%" class="TD_STYLE1">
                        薪酬发放方式
                    </td>
                    <td width="22%" class="TD_STYLE1">
                        <el-select v-model="methods" placeholder="请选择活动区域">
                            <el-option label="一级机构发放方式" value="1"></el-option>
                            <el-option label="二级机构发放方式" value="2"></el-option>
                            <el-option label="三级机构发放方式" value="3"></el-option>
                        </el-select>
                    </td>
                    <td width="60%" class="TD_STYLE1"></td>
            </table>
        </form>
    </div>
    <script type="text/javascript">
        var vm = new Vue({
            el: "#app",
            data() {
                return {
                    methods: ""
                }
            },
            methods: {
                ti() {
                    var sql = "check_status = 3 ";
                    if (this.methods == "1") {
                        sql += " AND first_kind_id is not null AND second_kind_id is NULL AND third_kind_id is  Null ";
                    } else if (this.methods == "2") {
                        sql += " AND first_kind_id is not null AND second_kind_id is NOT NULL AND third_kind_id is  Null ";
                    } else if (this.methods == "3") {
                        sql += " AND first_kind_id is not null AND second_kind_id is NOT NULL AND third_kind_id is NOT  Null ";
                    }
                    location.href = "/Salarygrant/CheckIn?tiao=" + sql;
                }
            },
            mounted: function () {

            }
        });
    </script>
</body>
</html>