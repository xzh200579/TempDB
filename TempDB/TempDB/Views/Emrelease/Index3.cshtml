
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index3</title>
    <script src="~/Scripts/vue/dist/vue.js"></script>
    <script src="~/Scripts/element-ui/lib/index.js"></script>
    <link href="~/Scripts/element-ui/lib/theme-chalk/index.css" rel="stylesheet" />
    <script src="~/Scripts/axios/dist/axios.js"></script>
</head>
<body>
    <table width="100%">
        <tr>
            <td>
                <font color="black">
                    您正在做的业务是：人力资源--招聘管理--职位发布管理--职位发布查询
                </font>
            </td>
        </tr>
    </table>
    <div id="app">
        <el-table :data="data"
                  style="width: 100%">
            <el-table-column prop="major_name"
                             label="职位名称"
                             width="180">
            </el-table-column>
            <el-table-column prop="second_kind_name"
                             label="公司名称"
                             width="180">
            </el-table-column>
            <el-table-column prop="human_amount"
                             label="招聘人数"
                             width="180">
            </el-table-column>
            <el-table-column prop="regist_time"
                             label="发布时间"
                             width="180">
                <template slot-scope="{ row }">
                    {{ row.regist_time | ftime }}
                </template>
            </el-table-column>
            <el-table-column prop="deadline"
                             label="截止时间"
                             width="180">
                <template slot-scope="{ row }">
                    {{ row.deadline | ftime }}
                </template>
            </el-table-column>
            <el-table-column label="操作">
                <template slot-scope="scope">     
                    <el-button size="mini" type="danger" v-on:click="update(scope.row)">申请该职位</el-button>
                </template>
            </el-table-column>
        </el-table>
        <el-pagination v-on:size-change="handleSizeChange"
                       v-on:current-change="handleCurrentChange"
                       :currentpage="currentPage"
                       :page-sizes="[2, 4, 8, 16]"
                       :page-size="pageSize"
                       layout="total, sizes, prev, pager, next, jumper"
                       :total="rows">
        </el-pagination>
    </div>
    <script>
        var vm = new Vue({
            el: "#app",
            data: {
                data: [],
                currentPage: 1,
                pageSize: 2,
                rows: 1,
            },
            methods: {
                fill: function () {
                    var sp = "checke=1";
                    var t = this;
                    axios.get('/Emrelease/Index2', {
                        params: {
                            CurrentPage: t.currentPage,
                            PageSize: t.pageSize,
                            Condition: sp
                        }
                    }).then(res => {
                        t.data = res.data.List;
                        t.rows = res.data.Rows;
                        console.log(res)
                    }).catch(err => {
                        console.log(err);
                    })
                }, handleSizeChange: function (size) {
                    this.pageSize = size;
                    this.currentPage = 1;
                    this.fill();
                },
                handleCurrentChange: function (cpage) {
                    this.currentPage = cpage;
                    this.fill();
                },
              
                update(scope) {
                    location.href = '/Eresume/Insert?id=' + scope.mre_id + '&&name=' + scope.major_kind_name;
                }
                
            },
            filters: {
                ftime: function (value, spe) {
                    if (value == '/Date(-1675353600000)/') {
                        return '空'
                    }
                    .0
                    var dt = new Date(parseInt(value.replace("/Date(","").replace(")/", ""), 10));
                    return dt.getFullYear() + "-" + (dt.getMonth() + 1) + "-" + dt.getDate();
                }
            },
            mounted: function () {
                this.fill();
            }
            // xzhxgid: function (obj) {
            //    this.udialogVisible = true;
            //    var t = this;
            //    t.xg.Id = obj.Id;
            //    t.xg.Name = obj.Name;
            //    t.xg.Pid = obj.Pid;
            //},
        })
    </script>
</body>
</html>
