                    </td>
                    <td class="TD_STYLE2" colspan="2">
                      
                        @Html.DropDownListFor(e => e.engage_type, new SelectList(new[] { new { value = "校园招聘", text = "校园招聘" }, new { value = "社会招聘", text = "社会招聘" },new { value = "人才引进", text = "人才引进" } }, "value", "text", 0) ,"--请选择--", new { @class = "TEXTAREA_STYLE1" })
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        职位分类
                    </td>
                    <td class="TD_STYLE2">
                
                        @Html.DropDownListFor(e => e.major_kind_name, ViewBag.s as IEnumerable<SelectListItem>, "--请选择--", new { @class = "TEXTAREA_STYLE1" })
                    </td>
                    <td class="TD_STYLE1">
                        职位名称
                    </td>
                    <td class="TD_STYLE2">
                 
                @Html.DropDownListFor(e => e.major_name, ViewBag.s1 as IEnumerable<SelectListItem>, "--请选择--", new { @class = "TEXTAREA_STYLE1" })
                    </td>
                    <td class="TD_STYLE1">
                        招聘人数
                    </td>
                    <td class="TD_STYLE2">
                      
                        @Html.TextBoxFor(e => e.human_amount, "", new { @class = "TEXTAREA_STYLE1" })
                    </td>
                    <td class="TD_STYLE1">
                        截止日期
                    </td>
                    <td class="TD_STYLE2">
                      
                        @Html.TextBoxFor(e => e.deadline, "", new { @class = "TEXTAREA_STYLE1" })
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        登记人
                    </td>
                    <td class="TD_STYLE2">
                   
                        @Html.TextBoxFor(e => e.register,new { @class = "TEXTAREA_STYLE1", @Value = "better_admin" })
                    </td>
                    <td class="TD_STYLE1">
                        登记时间
                    </td>
                    <td class="TD_STYLE2">

                        @Html.TextBoxFor(e => e.regist_time, "", new { @class = "   TEXTAREA_STYLE1", @id = "nowTime", @readonly = "readonly" })
                    </td>

                    <td>&nbsp; </td>
                    <td>&nbsp; </td>
                    <td>&nbsp; </td>
                    <td>&nbsp; </td>

                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        职位描述
                    </td>
                    <td class="TD_STYLE2" colspan="8">
                  
                        @Html.TextAreaFor(e => e.major_describe, new { @class = "TEXTAREA_STYLE1", @style = "width:600px" })
                    </td>

                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        招聘要求
                    </td>
                    <td class="TD_STYLE2" colspan="8">
                    
                        @Html.TextAreaFor(e => e.engage_required, new { @class = "TEXTAREA_STYLE1", @style = "width:600px" })
                    </td>

                </tr>
            </table>
        }
    </div>
    <script>
        $(function () {
            //一级联动
            $("#first_kind_name").change(function () {

                var url = "/Emrelease/IISelect/?name=" + $("#first_kind_name").val() + "";
                console.log(url);
                $.getJSON(url, function (data) {
                    $("#second_kind_name").html('');
                    $("#third_kind_name").html('')
                    $("#second_kind_name").append("<option value=''>请选择</option>");
                    $("#third_kind_name").append("<option value=''>请选择</option>");
                    $.each(data, function (i, item) {
                        $("#second_kind_name").append("<option value='" + item.second_kind_name + "'>" + item.second_kind_name + "</option>");
                    })
                });
            })

            //$("#major_kind_name").change(function () {

            //    var url = "/Emrelease/maor/?name=" + $("#Major_kind_name").val() + "";
            //    console.log(url);
            //    $.getJSON(url, function (data) {
            //        console.log(data);
            //        $("#Major_name").html('')
            //        $("#Major_name").append("<option value=''>请选择</option>");
            //        $.each(data, function (i, item) {
            //            $("#Major_name").append("<option value='" + item.Major_name + "'>" + item.Major_name + "</option>");
            //        })
            //    });
            //})
            //二级联动
            $("#second_kind_name").change(function () {

                var url = "/Emrelease/IIISelect/?name=" + $("#first_kind_name").val() + "&&name1=" + $("#second_kind_name").val() + "";

                $.getJSON(url, function (data) {
                    console.log(data);
                    $("#third_kind_name").html('');
                    $("#third_kind_name").append("<option value=''>请选择</option>");
                    $.each(data, function (i, item) {
                        console.log(item.third_kind_name);
                        $("#third_kind_name").append("<option value='" + item.third_kind_name + "'>" + item.third_kind_name + "</option>");
                    })

                })
            })

        })
    </script>

    <script>

        window.onload = check;
        function tick() {
            var now = new Date();
            var hours, minutes, seconds, noon;
            var intHours, intMinutes, intSeconds;
            intHours = now.getHours();
            intMinutes = now.getMinutes();
            intSeconds = now.getSeconds();
            if (intHours < 24) {
                hours = intHours + ":";
                noon = "A.M.";
            } else {
                intHours = intHours - 24;
                hours = intHours + ":";
                noon = "P.M.";
            }
            if (intMinutes < 10) {
                minutes = "0" + intMinutes + ":";
            } else {
                minutes = intMinutes + ":";
            }
            if (intSeconds < 10) {
                seconds = "0" + intSeconds + " ";
            } else {
                seconds = intSeconds + " ";
            }
            timeString = hours + minutes + seconds;
            var now = new Date();
            document.getElementById("nowTime").value = now.getFullYear() + "-" + (now.getMonth() + 1) + "-" + now.getDate() + " " + timeString;
            window.setTimeout("tick();", 1000);
        }

        //load事件
        function check() {
            //获得系统当前时间的方法
            tick();
        }
    </script>

