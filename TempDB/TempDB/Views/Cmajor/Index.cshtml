
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="~/Scripts/vue/dist/vue.js"></script>
    <script src="~/Scripts/element-ui/lib/index.js"></script>
    <link href="~/Scripts/element-ui/lib/theme-chalk/index.css" rel="stylesheet" />
    <script src="~/Scripts/axios/dist/axios.js"></script>
    <link rel="stylesheet" href="../../css/table.css" type="text/css">
    <script type="text/javascript" src="../../javascript/comm/comm.js"></script>
    <script src="~/Scripts/vue/dist/vue.js"></script>
    <script src="~/Scripts/element-ui/lib/index.js"></script>
</head>
<body>
    <table width="100%">
        <tr>
            <td>
                <font color="black">
                    您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--公共属性设置
                </font>
            </td>
        </tr>
        <tr>
            <td align="right">
                <input type="button" style=" width: 100px; border-radius: 10px; height: 29px;" value="添加" class="BUTTON_STYLE1"
                       onclick="window.location.href='/Cmajor/Insert';">
            </td>
        </tr>
    </table>
    <div id="app">
        <el-table :data="data"
                  border
                  style="width: 100%">
            <el-table-column prop="major_kind_id"
                             label="职位分类编号"
                             width="350">
            </el-table-column>
            <el-table-column prop="major_kind_name"
                             label="职位分类名称"
                             width="350">
            </el-table-column>
            <el-table-column prop="major_id"
                             label="职位编号"
                             width="350">
            </el-table-column>
            <el-table-column prop="major_name"
                             label="职位名称"
                             width="350">
            </el-table-column>
            <el-table-column label="操作" width="250">
                <template slot-scope="scope" >
                    <el-button size="mini" type="danger" style="width:70px;height:40px" v-on:click="delete2(scope.row.mak_id)">删除</el-button>
                </template>
            </el-table-column>
        </el-table>
    </div>
    <script>
        var vm = new Vue({
            el: "#app",
            data: {
                data: [],//进行存储数据
            },
            methods: {
                fill: function () {
                    axios.get("/Cmajor/Index1").then(res => {
                        this.data = res.data;
                        console.log(res)
                    }).catch(err => {
                        console.log(err);
                    })
                },
                delete2(id) {
                    var t = this;
                    if (confirm("是否确认删除")) {
                        axios.get('/Cmajor/MajorDelete1', {
                            params: {
                                id:id
                            }
                        }).then(res => {
                            if (res.data = 1) {
                                this.$message({
                                    message: "删除成功",
                                    type: "success"
                                });
                                this.fill();
                            } else {
                                alert("删除失败");
                            }
                           })
                    }
                }
            },
            mounted: function () {
                this.fill();
            },
        })
    </script>
</body>
</html>
